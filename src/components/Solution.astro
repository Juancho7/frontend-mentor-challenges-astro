---
const { solution } = Astro.props;
---

<li
  class='grow basis-0 h-52 border border-gray-300 flex flex-col rounded hover:shadow-md hover:shadow-gray-300 hover:scale-105 duration-100'
>
  <section class='h-4/5 relative'>
    <a href={solution.linkToVisit}>
      <span
        class='absolute w-full pl-2 font-semibold bg-gray-950 bg-opacity-50 text-gray-200'
      >
        {solution.soltionName}
      </span>
      <img
        src={solution.imgRoute}
        alt={solution.soltionName}
        class='h-full w-full object-cover object-center'
      />
    </a>
  </section>
  <section class='h-full flex justify-center items-center'>
    <a href={solution.repository} target='_blank'>
      <img
        src='/svg/github_icon_square.svg'
        alt='GitHub Repository'
        class='w-8'
      />
    </a>
  </section>
</li>
