---
import Solution from '../components/Solution.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

import { solutions } from '../data/solutions.js';
---

<BaseLayout
  title='Frontend Mentor Challenges'
  faviconRoute='/favicon-32x32.png'
>
  <div
    class='h-full p-3 min-[500px]:p-5 sm:p-8 md:p-12 lg:py-10 lg:px-52 xl:px-72 flex flex-col gap-y-5 text-gray-300 bg-gray-900'
  >
    <Header />
    <main class='grow flex flex-col gap-y-3'>
      <h2 class='text-lg font-bold'>Solutions</h2>
      <div>
        <ul class='grid grid-cols-2 sm:grid-cols-3 gap-2 sm:gap-x-3 lg:gap-x-5'>
          {solutions.map((solution) => <Solution solution={solution} />)}
        </ul>
      </div>
    </main>
    <Footer />
  </div>
</BaseLayout>
